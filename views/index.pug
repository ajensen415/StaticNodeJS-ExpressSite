extends layout.pug

block content

  article.portfolio-intro 
    h1 Ashley's Portfolio
    p This portfolio consists of several projects completed over the course of the Treehouse Fullstack JavaScript Techdegree. 


  article.portfolio-project-thumbs
    .projects-box.box.grid
      each project in projects

        .cell
          a(href= `/project/${project.id}`)
            img.thumbnail(src=`${project.image_urls[0]}`, alt=`${project.project_name}`)
            h5 #{project.project_name}

